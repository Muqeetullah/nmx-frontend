// jsconfig.json
{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@utils/*": ["src/utils/*"],
      "@context/*": ["src/context/*"],
      "@hooks/*": ["src/hooks/*"],
      "@graphql/*": ["src/graphql/*"],
      "@routes/*": ["src/routes/*"],
      "@containers/*": ["src/containers/*"],
      "@styles/*": ["src/styles/*"]
    }
  },
  "include": ["src"]
}
